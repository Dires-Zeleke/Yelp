<%- include("../partials/header") %>

<div class = "container">
		<h1 style="text-align:center">
	       Add New Comments<%campground.name%>
		</h1>
		<div style="width:30%; margin:25 auto">
			<form action = "/campgrounds/<%=campground.id%>/comments" method = "POST">
				<div class = "form-group">
				<textarea class="form-control" name="comment[text]" placeholder="Write Your comments here"></textarea>
				</div>
				<div class = "form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit">
				</div>
			</form>
			<a href="/campgrounds/<%=campground.id%>">Go Back</a>
		</div>


</div>

<%- include("../partials/footer") %>